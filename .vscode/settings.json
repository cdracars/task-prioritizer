{
  // Enable format on save
  "editor.formatOnSave": true,

  // Enable ESLint validation for relevant file types
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Set ESLint as the default formatter for TS/JS files
  // This assumes you have the ESLint extension installed (dbaeumer.vscode-eslint)
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },

  // Automatically fix ESLint issues on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // If you also use the Prettier extension (esbenp.prettier-vscode),
  // ensure it respects your project's .prettierrc file.
  // Usually, this is the default behavior, but you can explicitly set it.
  "prettier.requireConfig": true // This setting might be specific to the Prettier extension version
}
